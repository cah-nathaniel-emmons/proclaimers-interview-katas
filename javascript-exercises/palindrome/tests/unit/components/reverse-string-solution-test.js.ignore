import { moduleForComponent, test } from 'ember-qunit';

moduleForComponent('reverse-string-solution', 'components/reverse-string-solution-test.js', {
});

test('reverse empty string build-in solution', function () {
    var component = this.subject();

    equal(component.reverseStringBuiltInSolution(''), '');
});

test('reverse short string built-in solution', function () {
    var component = this.subject();

    equal(component.reverseStringBuiltInSolution('a'), 'a');
});

test('reverse simple string built-in solution', function () {
    var component = this.subject();

    equal(component.reverseStringBuiltInSolution('abc 123'), '321 cba');
});

